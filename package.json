{
    "name": "componentpreviewer",
    "displayName": "Component Previewer",
    "publisher": "Asnow",
    "description": "Preview React/Vue components more easily",
    "repository": "https://github.com/Asnow-c/ComponentPreviewer",
    "icon": "res/icon/logo_128.png",
    "keywords": [
        "Preview",
        "React Preview",
        "Vue Preview",
        "component previewer",
        "React",
        "Vue",
        "Vite",
        "Webpack",
        "component"
    ],
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./dist/extension.js",
    "targets": {
        "main": false
    },
    "contributes": {
        "commands": [
            {
                "command": "ComponentPreviewer.openView",
                "title": "组件预览",
                "icon": "$(default-view-icon)",
                "category": "ComponentPreviewer"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "ComponentPreviewer.openView",
                    "group": "navigation",
                    "when": "editorLangId == typescriptreact || editorLangId == javascriptreact || editorLangId == vue"
                }
            ]
        },
        "configuration": {
            "title": "Component Previewer",
            "properties": {
                "ComponentPreviewer.serverURL": {
                    "description": "Local Server URL",
                    "type": "string",
                    "default": "http://localhost:5173/.preview/index.html",
                    "scope": "resource"
                },
                "ComponentPreviewer.serverRootDir": {
                    "description": "Dependent installation location (relative to workspace folder)",
                    "type": "string",
                    "scope": "resource",
                    "default": ""
                }
            }
        }
    },
    "scripts": {
        "watch": "tsc -watch",
        "build": "tsc -p tsconfig-build.json"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/node": "16",
        "@types/vscode": "^1.63.0"
    },
    "dependencies": {
        "fs-extra": "^10.1.0"
    }
}
