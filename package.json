{
    "name": "componentpreviewer",
    "displayName": "Component Previewer",
    "publisher": "Asnow",
    "license": "MIT",
    "description": "Preview React/Vue components more easily",
    "repository": "https://github.com/Asnow-c/ComponentPreviewer",
    "icon": "res/icon/logo_128.png",
    "keywords": [
        "Preview",
        "React Preview",
        "Vue Preview",
        "component previewer",
        "React",
        "Vue",
        "Vite",
        "Webpack",
        "component"
    ],
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "workspaceContains:"
    ],
    "main": "./out/extension.js",
    "targets": {
        "main": false
    },
    "contributes": {
        "commands": [
            {
                "command": "ComponentPreviewer.openView",
                "title": "%cmd.openView%",
                "icon": "$(default-view-icon)",
                "category": "ComponentPreviewer"
            }
        ],
        "configuration": {
            "title": "Component Previewer",
            "properties": {
                "ComponentPreviewer.serverURL": {
                    "description": "%setting.serverURL.desc%",
                    "type": "string",
                    "default": "http://localhost:5173/.preview/index.html",
                    "scope": "resource"
                },
                "ComponentPreviewer.serverRootDir": {
                    "description": "%setting.serverRootDir.desc%",
                    "type": "string",
                    "scope": "resource",
                    "default": ""
                }
            }
        }
    },
    "scripts": {
        "build": "buildExt & buildPreview & buildWebView",
        "watchExt": "tsc -watch",
        "buildExt": "tsc",
        "watchPreview": "tsc --watch -p ./package/preview/tsconfig.json",
        "buildPreview": "tsc -p ./package/preview/tsconfig.json",
        "watchWebView": "vite build -c ./package/webview/vite.config.ts --watch",
        "buildWebView": "vite build -c ./package/webview/vite.config.ts"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/node": "16",
        "@types/vscode": "^1.63.0"
    },
    "dependencies": {
        "fs-extra": "^10.1.0"
    }
}
