{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ESNext",
        "outDir": "out",
        "lib": ["ESNext"],
        "sourceMap": true,
        "strict": true /* enable all strict type-checking options */,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true
    },
    "exclude": ["**/node_modules/**", "package"],
    "include": ["src"]
}
